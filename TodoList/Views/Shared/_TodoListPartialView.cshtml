<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th style="width: 50%">标题</th>
            <th style="width: 20%">截止日期</th>
            <th style="width: 10%">状态</th>
            <th style="width: 10%">优先级</th>
            <th style="width: 10%">操作</th>
        </tr>
    </thead>
    <tbody v-if="showSinner">
        <tr>
            <td class="text-center" colspan="5">
                <div class="spinner-border" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </td>
        </tr>
    </tbody>
    <tbody v-else>
        <tr v-for="todo in todos">
            <td>{{todo.title}}</td>
            <td>{{todo.dueDate}}</td>
            <td>
                <span v:class="todo.IsCompleted ? 'text-success' : 'text-danger'">
                    {{todo.isCompleted ? '✔️' : '❌' }}
                </span>
            </td>
            <td>{{todo.priority}}</td>
            <td>
                <a class="text-primary" v-bind:href="`/todo/details/${todo.id}`">详情</a>
            </td>
        </tr>
    </tbody>
</table>