@{
    ViewBag.Title = "待办事项";
    ViewBag.ContainerTitle = "待办事项";
}

<div class="pt-3 pb-3">
    <form class="card-body" id="search-form">
        <div class="row">
            <div class="col-3 row">
                <label class="form-label col-sm-3 col-form-label" for="inp-title">标题：</label>
                <div class="col-sm-9">
                    <input class="form-control" type="text" id="inp-title" placeholder="请输入标题" v-model="query.title" />
                </div>
            </div>
            <div class="col-3 row">
                <label class="form-label col-sm-5 col-form-label" for="inp-duedate">截止日期：</label>
                <div class="col-sm-7">
                    <input class="form-control" id="inp-duedate" type="date" v-model="query.dueDate" />
                </div>
            </div>
            <div class="col-3 row">
                <label class="form-label col-sm-3 col-form-label" for="sel-status">状态：</label>
                <div class="col-sm-9">
                    <select id="sel-status" class="form-select" aria-label="Default select example" v-model="query.isCompleted">
                        <option value="" selected>所有</option>
                        <option value="true">已完成</option>
                        <option value="false">未完成</option>
                    </select>
                </div>
            </div>
            <div class="col-2 row">
                <div class="col-sm-6">
                    <button class="btn btn-outline-success" id="btn-search" type="button" @@click="fetchData()">搜索</button>
                </div>
                <div class="col-sm-6">
                    <button class="btn btn-outline-primary" type="button">添加</button>
                </div>
            </div>
        </div>
    </form>
</div>

<div id="today-todos">
    @{
        await Html.RenderPartialAsync("_TodoListPartialView");
    }
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/todo.js"></script>
}